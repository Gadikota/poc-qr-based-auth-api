extends layout

block content
  .page-header.text-center
    h1
      span.fa.fa-anchor
      |  Profile Page
    a.btn.btn-default.btn-sm(href='/logout') Logout
  .row
    // LOCAL INFORMATION
    .col-sm-6
      .well
        h3
          span.fa.fa-user
          |  Local
        p
          strong id =#{user._id}"
          strong Email =#{user.local.email}"
          strong password =#{user.local.password}"
  .row.qr-code

block javascripts
  script(src="/javascripts/socket-comm.js")
  script(type="text/javascript" language="javascript").
    $(function() {
      initComm('#{user._id}')
    });
